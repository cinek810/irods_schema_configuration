{
    "id": "https://schemas.irods.org/configuration/v2/configuration_directory.json#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "path": {"type": "string"},
        "files": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {"type": "string"},
                    "contents": {
                        "type": "string",
                        "pattern": "^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)?$"
                    }
                },
                "required": [
                    "name",
                    "contents"
                ]
            }
        }
    },
    "required": [
        "path",
        "files"
    ]
}
