{
    "id": "https://schemas.irods.org/configuration/v2/configuration_directory#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "path": {"type": "string"},
        "files": {
            "type": "object",
            "additionalProperties": {
                "type": "string",
                "pattern": "^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)?$"
            }
        }
    },
    "required": ["path","files"]
}
